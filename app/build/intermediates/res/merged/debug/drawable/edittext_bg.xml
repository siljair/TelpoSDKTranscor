<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
 <!-- 边缘线的宽度和颜色 -->
<stroke android:width="1px" android:color="#969696" />
<!-- 中间渐变，角度0从左往右，正值为逆时针，270度为从上到下 -->
<gradient  android:startColor="#ffffff"
           android:centerColor="#e9e9e9"
           android:endColor="#d8d8d8"
           android:angle="270"/>
<!-- 设置四个角的角度 -->
 <corners android:topLeftRadius="2dp" android:topRightRadius="2dp" android:bottomLeftRadius="2dp"
          android:bottomRightRadius="2dp"/>
 <!-- 设置padding -->
 <padding android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp"/>
 </shape>
