<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="#ffffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" android:id="@+id/relativeLayout"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true">

        <TextView
                android:id="@+id/showData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="32dp"
                android:textSize="15dp"
                android:textColor="#000000"
                android:text="@string/bl_xsdxx"/>
        <ImageView
                android:id="@+id/imageView1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignTop="@+id/showData"
                android:layout_marginLeft="23dp"
                android:layout_toRightOf="@+id/showData"
                android:src="@drawable/icon"/>
    </RelativeLayout>
    <Button
            android:id="@+id/requestDataBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bl_hqsfzxx"
            android:layout_below="@+id/relativeLayout" android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>

</RelativeLayout>