<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.telpo.tps550.api.demo.ValidarPasse"
    android:background="@drawable/bg2">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:weightSum="1">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"

            android:background="@drawable/logo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textViewDataHora"
            android:textColor="#ffffffff"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal" />
        <TextView
            android:text="ENCOSTE O CARTÃƒO NO LEITOR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffffff"
            android:textSize="30sp"
            android:id="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold" />
        <TextView
            android:text="(((((( RFID ))))))"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffffff"
            android:textSize="30sp"
            android:id="@+id/textViewWaves"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:background="#c3fa428c" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffa049"
            android:textSize="30dp"
            android:id="@+id/textViewResultLeitura"
            android:layout_below="@+id/textViewWaves"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="ULTIMA PARAGEM"
            android:id="@+id/textViewUltimaParagem"
            android:gravity="center_horizontal"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/textView3"
            android:textColor="#ffffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Coordenadas"
            android:id="@+id/textView3"
            android:textColor="#ffffffff"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:visibility="gone" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0;0"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:id="@+id/textViewLatitude"
            android:textColor="#ffffffff"
            android:textSize="30sp"
            android:visibility="gone" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Velocidade"
            android:id="@+id/textView4"
            android:textColor="#ffffffff"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0"
            android:id="@+id/textViewVelocidade"
            android:textColor="#ffffffff"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Autocarro:"
            android:id="@+id/textView7"
            android:textColor="#ffffffff"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="150dp"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ST-00-XX"
            android:id="@+id/textViewAutocarroValid"
            android:textColor="#ffffffff"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:layout_marginLeft="50dp"
            android:layout_alignTop="@+id/textView7"
            android:layout_toRightOf="@+id/textView7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Linha:"
            android:id="@+id/textView"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:layout_below="@+id/textView7"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="150dp"
            android:layout_alignParentBottom="false"
            android:layout_alignWithParentIfMissing="false" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="10"
            android:id="@+id/textViewLinhaValid"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffffff"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/textViewAutocarroValid"
            android:layout_toRightOf="@+id/textViewAutocarroValid"
            android:layout_alignBottom="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Turno:"
            android:id="@+id/textViewTextoTurno"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="150dp"
            android:layout_alignParentBottom="false"
            android:layout_alignWithParentIfMissing="false" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0"
            android:id="@+id/textViewTurnoValid"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffffff"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_below="@+id/textViewLinhaValid"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/textViewLinhaValid"
            android:layout_toRightOf="@+id/textViewTextoTurno"
            android:layout_alignBottom="@+id/textViewTextoTurno" />

        <CheckBox
            android:textSize="35sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vender PrePago"
            android:id="@+id/checkBoxVenderPrePago"
            android:layout_below="@+id/textView"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textColorHighlight="#f9a93b"
            android:background="#f9a93b"
            android:visibility="gone" />

        <Spinner
            android:layout_alignLeft="@+id/textViewAutocarroValid"
            android:layout_toRightOf="@+id/textViewAutocarroValid"
            android:layout_below="@+id/textViewLinhaValid"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerNumerPrePago"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textViewContador"
            android:layout_gravity="right"
            android:layout_alignBottom="@+id/checkBoxVenderPrePago"
            android:layout_toRightOf="@+id/spinnerNumerPrePago" />
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="520sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/White"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="2dp">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageViewStatusCartao"
            android:maxWidth="80dp"

            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal|top"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="true" />

            <WebView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:id="@+id/webView"
                android:layout_gravity="center_vertical"
                android:layout_below="@+id/imageViewStatusCartao"
                android:background="@color/White" />


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Paragens"
            android:id="@+id/textViewParagens"
            android:textColor="#000000"
            android:visibility="gone"
            />
        <SurfaceView
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:id="@+id/surfaceViewPic"
            android:layout_below="@+id/textViewParagens"
            android:focusableInTouchMode="true"
            android:visibility="gone" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewBarCode"
            android:minHeight="100dp"
            />

    </LinearLayout>

</RelativeLayout>
